.Top_bar {
  background-color: #fff;
  border-bottom: 1px solid #e2e2e2;
  color: #333;
}
.header {
  width: 100%;
  height: 91rpx;
  line-height: 90rpx;
  text-align: center;
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
}
.header .img {
    width: 100rpx;
    height: 90rpx;
}
.header .img image {
      width: 19rpx;
      height: 35rpx;
      display: block;
      position: absolute;
      left: 25rpx;
      top: 50%;
      margin-top: -17.5rpx;
}
.header .text {
    width: 400rpx;
    height: 90rpx;
    line-height: 90rpx;
    position: absolute;
    left: 50%;
    top: 0;
    margin-left: -200rpx;
    text-align: center;
    font-size: 36rpx;
}

.SpList {
  width: 100%;
  background-color: #F5F5F5;
  min-height: 380rpx;
  padding-bottom: 40rpx;
  overflow: hidden;
}
.SpList .box {
    padding: 0 25rpx;
    overflow: hidden;
}
.SpList .box .li {
      width: 650rpx;
      padding: 25rpx;
      height: 200rpx;
      background-color: #fff;
      margin-top: 25rpx;
      border-radius: 10rpx;
      -webkit-box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
              box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
}
.SpList .box .li:first-child {
        margin-top: 0;
}
.SpList .box .li .img {
        display: inline-block;
        width: 190rpx;
        height: 190rpx;
        overflow: hidden;
        margin-right: 20rpx;
}
.SpList .box .li .img image {
          width: 190rpx;
          height: 190rpx;
}
.SpList .box .li .text {
        display: inline-block;
        overflow: hidden;
        width: 440rpx;
        height: 190rpx;
}
.SpList .box .li .text .tit {
          font-size: 28rpx;
          display: -webkit-box;
          -webkit-box-orient: vertical;
          -webkit-line-clamp: 2;
          overflow: hidden;
          line-height: 40rpx;
          height: 80rpx;
}
.SpList .box .li .text .oneday {
          font-size: 26rpx;
          color: #93939e;
          line-height: 50rpx;
}
.SpList .box .li .text .oneday .choice {
            color: #ff792a;
}
.SpList .box .li .bottom {
        width: 650rpx;
        height: 80rpx;
        line-height: 80rpx;
        border-top: 1rpx solid #e2e2e2;
        color: #93939e;
        font-size: 0;
}
.SpList .box .li .bottom .choice {
          color: #ff792a;
}
.SpList .box .li .bottom .num {
          display: inline-block;
          width: 325rpx;
          vertical-align: top;
          font-size: 28rpx;
}
.SpList .box .li .bottom .num .numImg {
            width: 28rpx;
            height: 28rpx;
            display: inline-block;
}
.SpList .box .li .bottom .address {
          font-size: 28rpx;
          display: inline-block;
          width: 325rpx;
}
.SpList .box .li .bottom .address .numImg {
            width: 28rpx;
            height: 25rpx;
            display: inline-block;
}

