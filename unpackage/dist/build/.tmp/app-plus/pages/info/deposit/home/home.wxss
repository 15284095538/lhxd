page {
  background-color: #f5f5f5;
}
.depositList {
  width: 100%;
  background-color: #F5F5F5;
  min-height: 380rpx;
  padding-bottom: 40rpx;
}
.depositList .box {
    padding: 0 25rpx;
    overflow: hidden;
}
.depositList .box .li {
      width: 650rpx;
      padding: 25rpx;
      height: 290rpx;
      background-color: #fff;
      margin-top: 25rpx;
      border-radius: 10rpx;
      overflow: hidden;
      -webkit-box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
              box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
}
.depositList .box .li .top {
        overflow: hidden;
        padding-bottom: 30rpx;
}
.depositList .box .li .img {
        display: inline-block;
        width: 190rpx;
        height: 190rpx;
        overflow: hidden;
        margin-right: 20rpx;
}
.depositList .box .li .img image {
          width: 190rpx;
          height: 190rpx;
}
.depositList .box .li .text {
        display: inline-block;
        overflow: hidden;
        width: 440rpx;
        height: 190rpx;
}
.depositList .box .li .text .tit {
          font-size: 28rpx;
          display: -webkit-box;
          -webkit-box-orient: vertical;
          -webkit-line-clamp: 2;
          overflow: hidden;
          line-height: 40rpx;
}
.depositList .box .li .text .oneday {
          font-size: 26rpx;
          color: #93939e;
          line-height: 50rpx;
}
.depositList .box .li .text .oneday .choice {
            color: #ff792a;
}
.depositList .box .li .text .onemonth {
          font-size: 26rpx;
          color: #93939e;
          line-height: 50rpx;
}
.depositList .box .li .text .onemonth .choice {
            color: #ff792a;
}
.depositList .box .li .bottom {
        width: 650rpx;
        height: 80rpx;
        line-height: 80rpx;
        border-top: 1rpx solid #e2e2e2;
        color: #93939e;
        font-size: 28rpx;
}
.depositList .box .li .bottom .fl {
          float: left;
}
.depositList .box .li .bottom .fl .choice {
            color: #ff792a;
}
.depositList .box .li .bottom .btn {
          float: right;
          height: 50rpx;
          width: 140rpx;
          text-align: center;
          border: 1rpx solid #ff792a;
          color: #ff792a;
          line-height: 50rpx;
          border-radius: 3px;
          margin-top: 15rpx;
}

