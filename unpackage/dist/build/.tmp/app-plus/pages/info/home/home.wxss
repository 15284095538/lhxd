.userinfo {
  height: 320rpx;
  position: relative;
  overflow: hidden;
}
.userinfo .infoBg {
    position: absolute;
    width: 100%;
    left: 0;
    top: 0;
    height: 320rpx;
}
.userinfo .more {
    position: absolute;
    right: 25rpx;
    top: 50%;
    width: 17rpx;
    height: 29rpx;
    margin-top: -14.5rpx;
    z-index: 2;
}
.userinfo .userAvatarUrl {
    width: 140rpx;
    height: 140rpx;
    position: absolute;
    left: 40rpx;
    top: 100rpx;
    z-index: 2;
}
.userinfo .userAvatarUrl image {
      width: 136rpx;
      height: 136rpx;
      border: 2rpx solid #fff;
      border-radius: 50%;
      overflow: hidden;
}
.userinfo .info {
    width: 500rpx;
    height: 100rpx;
    position: absolute;
    left: 275rpx;
    top: 120rpx;
}
.userinfo .info .text {
      height: 50rpx;
      line-height: 50rpx;
      color: #ffffff;
      font-size: 32rpx;
}
.userinfo .info .text image {
        width: 22rpx;
        height: 31rpx;
        margin: 10rpx 5rpx 0 0;
        float: left;
}
.menuLink {
  background-color: #fff;
  padding: 0 25rpx;
}
.menuLink .li {
    height: 100rpx;
    line-height: 100rpx;
    vertical-align: middle;
    overflow: hidden;
    border-bottom: 1rpx solid #e2e2e2;
    font-size: 28rpx;
}
.menuLink .li .icon {
      width: 50rpx;
      height: 50rpx;
      margin: 23rpx 20rpx 0 0;
      float: left;
}
.menuLink .li .link {
      width: 14rpx;
      height: 26rpx;
      float: right;
      margin: 37rpx 0 0 0;
}
.menuLink .li:last-child {
      border: 0;
}

