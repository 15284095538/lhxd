.payment {
  background-color: #fff;
  font-size: 28rpx;
  padding: 25rpx;
}
.payment .smallTit {
    height: 55rpx;
    line-height: 55rpx;
    margin: 20rpx 0;
}
.payment .smallTit:after {
      content: '*';
      color: #ff792a;
      line-height: 55rpx;
}
.payment .inputBox {
    height: 70rpx;
    line-height: 70rpx;
    border: 1rpx solid #E2E2E2;
    border-radius: 5px;
    overflow: hidden;
    position: relative;
}
.payment .inputBox .text {
      padding-left: 30rpx;
      line-height: 70rpx;
      height: 70rpx;
      font-size: 28rpx;
}
.payment .inputBox .picker {
      padding-left: 30rpx;
      line-height: 70rpx;
      height: 70rpx;
      font-size: 28rpx;
}
.payment .inputBox .getcode {
      position: absolute;
      right: 20rpx;
      top: 0;
      height: 80rpx;
      font-size: 26rpx;
      color: #ff792a;
      z-index: 2;
      line-height: 70rpx;
      height: 70rpx;
}
.pay {
  height: 100rpx;
  position: relative;
  left: 0;
  top: 220rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  line-height: 100rpx;
  font-size: 28rpx;
